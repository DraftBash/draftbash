{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist",
        "jsx": "react-jsx"
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": ["node_modules", "dist"]
}
